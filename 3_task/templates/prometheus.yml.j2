global:
  scrape_interval: 15s
  evaluation_interval: 15s

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'node-exporter'
    static_configs:
      - targets: ['node-exporter:9100']

  - job_name: 'haproxy'
    static_configs:
      - targets: ['localhost:9101']

{% for i in range(1, 6) %}
  - job_name: 'galera-node-{{ i }}'
    static_configs:
      - targets: ['localhost:{{ 9103 + i }}']
{% endfor %}
